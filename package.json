{
	"name": "vscode-koverage",
	"publisher": "tenninebt",
	"displayName": "Koverage",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:vscodeKoverage"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
		  {
			"command": "vscodeKoverage.refresh",
			"title": "Refresh",
			"icon": {
				"dark": "resources/dark/refresh.svg",
				"light": "resources/light/refresh.svg"
			}
		  },
		  {
			"command": "vscodeKoverage.openFile",
			"title": "Open"
		  }
		],
		"views": {
			"test": [
				{
					"id": "vscodeKoverage",
					"name": "Koverage"
				}
			]
		},
		"menus": {
		  "view/title": [
			{
			  "command": "vscodeKoverage.refresh",
			  "when": "view == vscodeKoverage",
			  "group": "navigation"
			}
		  ],
		  "view/item/context": [
			{
			  "command": "vscodeKoverage.openFile",
			  "when": "view == vscodeKoverage && viewItem == fileCoverage",
			  "group": "inline"
			}
		  ]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@cvrg-report/clover-json": "0.3.0",
		"cobertura-parse": "github:vokal/cobertura-parse#53109a6",
		"glob": "7.1.4",
		"jacoco-parse": "2.0.1",
		"lcov-parse": "1.0.0"
	}
}
